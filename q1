#include <iostream>
using namespace std;
#include <bits/stdc++.h>

int main() {
	int t;
	cin>>t;
	while(t--){
	    int n;
	    cin>>n;
	    std::vector<int> L(n),R(n);
	    for(int i=0;i<n;i++){cin>>L[i];}
	    for(int i=0;i<n;i++){cin>>R[i];}
	    int ans=0;
	    for(int i=0;i+1<n;i++){
	        ans += min(R[i],L[i+1]);
	    }
	    cout<<ans<<endl;
	}
	return 0;
}
